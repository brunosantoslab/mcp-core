{
  "compilerOptions": {
    "types": ["jest", "node"],
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "outDir": "./dist",
    "rootDir": ".", // Changed to include both src/ and tests/
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "tests/**/*"], // Include test files
  "exclude": ["node_modules", "dist"]
}